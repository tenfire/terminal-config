{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": false,
  "console_title_template": "{{if .Root}}root@{{end}}{{ .HostName }} ➜ {{ .Folder }}",
  "var": {
    "WeatherURL": "<WEATHER_URL>",
    "CalendarURL": "https://calendar.google.com/calendar/u/0/r"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "style": "diamond",
          "leading_diamond": "",
          "foreground": "#26C6DA",
          "background": "#144b64",
          "template": " {{ if .SSHSession }}󰢹 {{ else }}󰍹 {{ end }}{{ .HostName }}"
        },
        {
          "type": "os",
          "style": "diamond",
          "foreground": "#FFFFF",
          "background": "#144b64",
          "trailing_diamond": "",
          "template": " {{.Icon}} ",
          "properties": {
            "macos": "mac"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#193549",
          "background": "#fffb38",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "leading_diamond": "",
          "trailing_diamond": "",
          "template": " {{ url .UpstreamIcon .UpstreamURL }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} 󰆓 {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#ffffff",
          "background": "#6CA35E",
          "template": " 󰎙 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "properties": {
            "fetch_version": true
          }
        },
        {
          "type": "go",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#111111",
          "background": "#8ED1F7",
          "template": "  {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "properties": {
            "fetch_version": true
          }
        },
        {
          "type": "julia",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#111111",
          "background": "#4063D8",
          "template": "  {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "properties": {
            "fetch_version": true
          }
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#111111",
          "background": "#FFDE57",
          "template": "  {{ .Full }} ",
          "properties": {
            "display_mode": "files",
            "fetch_virtual_env": false
          }
        },
        {
          "type": "ruby",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#ffffff",
          "background": "#AE1401",
          "template": "  {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "properties": {
            "display_mode": "files",
            "fetch_version": true
          }
        },
        {
          "type": "azfunc",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#ffffff",
          "background": "#FEAC19",
          "template": "  {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "properties": {
            "display_mode": "files",
            "fetch_version": false
          }
        },
        {
          "type": "aws",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#ffffff",
          "background_templates": [
            "{{if contains \"default\" .Profile}}#FFA400{{end}}",
            "{{if contains \"1n\" .Profile}}#f1184c{{end}}"
          ],
          "template": "  {{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }} ",
          "properties": {
            "display_default": false
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#FFFFFF",
          "template": "<parentBackground></>"
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#83769c",
          "template": "<transparent></>  {{ .FormattedMs }} ",
          "properties": {
            "threshold": 500,
            "style": "austin"
          }
        },
        {
          "type": "status",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#00897b",
          "background_templates": [
            "{{ if gt .Code 0 }}#e91e63{{ end }}"
          ],
          "trailing_diamond": "",
          "template": "<parentBackground></>  ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "newline": false,
      "alignment": "right",
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#ffffff",
          "background": "#0077c2",
          "template": "<#0077c2,transparent></>  {{ .Name }} <transparent,#0077c2></>"
        },
        {
          "type": "spotify",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": "",
          "foreground": "#ffffff",
          "background": "#1BD760",
          "properties": {
            "playing_icon": " ",
            "paused_icon": " ",
            "stopped_icon": " "
          }
        },
        {
          "type": "kubectl",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": "",
          "foreground": "#000000",
          "background": "#0B59E7",
          "template": " 󱃾 {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} "
        },
        {
          "type": "docker",
          "invert_powerline": true,
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#000000",
          "background": "#5584da",
          "template": "  {{ .Context }} "
        },
        {
          "type": "sysinfo",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": "",
          "foreground": "#ffffff",
          "background": "#8f43f3",
          "background_templates": [
            "{{if gt .PhysicalPercentUsed 80}}#940031{{end}}"
          ],
          "template": "  {{ round .PhysicalPercentUsed 0 }}% {{ (div ((sub .PhysicalTotalMemory .PhysicalAvailableMemory)|float64) 1000000000.0) }}/{{ (div .PhysicalTotalMemory 1000000000.0) }}GB ",
          "properties": {
            "precision": 2
          }
        },
        {
          "type": "battery",
          "style": "powerline",
          "powerline_symbol": "",
          "invert_powerline": true,
          "foreground": "#ffffff",
          "background": "#f36943",
          "background_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if eq \"Discharging\" .State.String}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}"
          ],
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }} ",
          "properties": {
            "discharging_icon": " ",
            "charging_icon": " ",
            "charged_icon": " "
          }
        },
        {
          "type": "text",
          "style": "powerline",
          "foreground": "#FFFFFF",
          "background": "transparent",
          "invert_powerline": true,
          "powerline_symbol": "",
          "template": "<parentBackground></>"
        },
        {
          "type": "owm",
          "style": "powerline",
          "invert_powerline": true,
          "powerline_symbol": "",
          "foreground": "#D6DEEB",
          "background": "#575656",
          "template": "{{ $WeatherText := cat .Weather \"<SPACE>\" \"(\" .Temperature .UnitIcon \")\" | replace \" \" \"\" | replace \"<SPACE>\" \" \" }} {{ url $WeatherText .Var.WeatherURL }} ",
          "properties": {
            "api_key": "<WEATHER_API_KEY>",
            "location": "<WEATHER_LOCATION>",
            "units": "metric",
            "cache_timeout": 0,
            "http_timeout": 200
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "invert_powerline": true,
          "foreground": "#111111",
          "background": "#2e9599",
          "trailing_diamond": "",
          "template": "{{ $TimeText := .CurrentDate | date .Format }} {{ url $TimeText .Var.CalendarURL }} "
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#26C6DA",
          "background": "#144b64",
          "foreground_templates":  [
            "{{if .Root}}#FF0000{{end}}"
          ],
          "background_templates":  [
            "{{if .Root}}#ffdb0c{{end}}"
          ],
          "leading_diamond": "",
          "style": "diamond",
          "template": " {{if .Root}} {{else}} {{end}}{{ .UserName }} ",
          "type": "text"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "#ffffff",
          "background": "#2ca3da",
          "background_templates": [
            "{{if eq .PWD \"/\"}}#ff479c{{end}}"
          ],
          "template": " {{ path .Path .Location }} ❯",
          "properties": {
            "folder_separator_icon": "  ",
            "home_icon": " ",
            "style": "mixed"
          }
        }
      ],
      "type": "prompt"
    }
  ]
}
